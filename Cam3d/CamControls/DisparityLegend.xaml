<UserControl x:Class="CamControls.DisparityLegend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CamControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="40"
             Mouse.MouseMove="OnMouseMove">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.RowSpan="5" x:Name="_legendImage" Stretch="Fill"/>
        <Label Grid.Row="4" x:Name="_labelMax" Padding="0" HorizontalContentAlignment="Center">MAX</Label>
        <Label Grid.Row="2" x:Name="_labelMid" Padding="0" HorizontalContentAlignment="Center">MID</Label>
        <Label Grid.Row="0" x:Name="_labelMin" Padding="0" HorizontalContentAlignment="Center">MIN</Label>
    </Grid>
</UserControl>
