<UserControl x:Class="RectificationModule.RectificationModeTabs" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RectificationModule" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <TabControl>
        <TabControl.Items>
            <TabItem Header="Calib Rectification / Feature Detection">
                <local:MatchedImagesTab x:Name="_tabRect"/>
            </TabItem>
            <TabItem Header="Uncalibrated Rectification">
                <local:FeatureImagesTab x:Name="_tabFeatures"/>
            </TabItem>
        </TabControl.Items>

    </TabControl>
</UserControl>
