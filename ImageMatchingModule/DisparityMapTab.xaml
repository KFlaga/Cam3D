<UserControl x:Class="ImageMatchingModule.DisparityMapTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageMatchingModule"
             xmlns:CamControls="clr-namespace:CamControls;assembly=CamControls" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid x:Name="_mainLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <CamControls:DisparityImage x:Name="_dispControlFirst" Grid.Column="0" Grid.Row="0" BorderBrush="Black" BorderThickness="1"/>
        <CamControls:DisparityImage x:Name="_dispControlSec" Grid.Column="2" Grid.Row="0" BorderBrush="Black" BorderThickness="1"/>
    </Grid>
</UserControl>
