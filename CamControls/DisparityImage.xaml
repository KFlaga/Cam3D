<UserControl x:Class="CamControls.DisparityImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CamControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="_mainLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:DisparityLegend x:Name="_legend" Grid.Column="0" Margin="2,5,2,5"/>
        <Button Grid.Column="0" Grid.Row="1" Height="30" Click="SelectRange">Range</Button>
    <!--    <CamControls:ZoomingScrollControl x:Name="_imageControl" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
            <CamControls:ZoomingScrollControl.Child>
                <Image/>
            </CamControls:ZoomingScrollControl.Child>
        </CamControls:ZoomingScrollControl> -->
        <Image x:Name="_imageControl" Grid.Column="1" Grid.RowSpan="2"/>
        <Canvas x:Name="_dispBoxCanvas" Grid.Column="1" Grid.RowSpan="2"/>
    </Grid>
    
</UserControl>
