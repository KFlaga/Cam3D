<UserControl x:Class="CalibrationModule.CalibrationModeTabs" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CalibrationModule" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <TabControl>
        <TabItem Header="Camera Left">
            <local:CalibModeCamTab x:Name="_tabCam1" CameraCaptureLabel="LeftCameraCaptureSnapshot"/>
        </TabItem>
        <TabItem Header="Camera Right">
            <local:CalibModeCamTab x:Name="_tabCam2" CameraCaptureLabel="RightCameraCaptureSnapshot"/>
        </TabItem>

    </TabControl>
</UserControl>
